# 企业微信配置模板
# 复制此文件为 .env 并填入真实的配置信息

# 企业微信企业ID
# 获取方式：企业微信管理后台 -> 我的企业 -> 企业信息 -> 企业ID
WECHAT_CORP_ID=your_corp_id_here

# 企业微信应用Secret
# 获取方式：企业微信管理后台 -> 应用管理 -> 自建应用 -> Secret
WECHAT_CORP_SECRET=your_corp_secret_here

# 企业微信应用ID
# 获取方式：企业微信管理后台 -> 应用管理 -> 自建应用 -> AgentId
WECHAT_AGENT_ID=your_agent_id_here

# 企业微信API基础URL（通常不需要修改）
WECHAT_BASE_URL=https://qyapi.weixin.qq.com

# API配置
API_TIMEOUT=30
API_RETRY_COUNT=3
API_RETRY_DELAY=1

# 假期配置
# 年假审批模板ID（如果使用审批记录计算）
ANNUAL_LEAVE_TEMPLATE_ID=your_template_id_here
# 默认年假小时数
DEFAULT_ANNUAL_LEAVE_HOURS=120

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 缓存配置
CACHE_ENABLED=true
CACHE_EXPIRE_SECONDS=3600

# 界面配置
WINDOW_TITLE=离职年假计算器
WINDOW_WIDTH=600
WINDOW_HEIGHT=500

# 开发模式（开启后会显示更多调试信息）
DEBUG_MODE=false

# 测试模式（开启后使用模拟数据）
TEST_MODE=false